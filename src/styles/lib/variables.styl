$color-blue-very-dark = #131D2C
$color-blue-dark = #2E4F66
$color-blue = #3C5F74
$color-mark = #F8FCA1
$color-highlight = #62859A
$color-subtle = #666
$color-text = #222
$color-gray = #999
$color-lightgray = #EEE
$color-white = #FFF
$color-cta = $color-mark

$font-size-code = .8rem
$font-size-small = .9rem
$font-size-medium = 1rem
$font-size-subhead = 1.125rem
$font-size-head = 1.25rem
$font-size-large = 1.5rem
$font-size-huge = 2rem

$space-tiny = .25rem
$space-small = .5rem
$space-normal = .75rem
$space-medium = 1rem
$space-large = 1.5rem
$space-huge = 2.25rem

$width-main = 40rem

$font-family-base = Constantia, "Lucida Bright", Lucidabright, "Lucida Serif", Lucida, "DejaVu Serif", "Bitstream Vera Serif", "Liberation Serif", Georgia, serif
$font-family-code = "Fira Code", Hasklig, "Source Code Pro",  "DejaVu Sans Mono", Hack, Meslo, Menlo, Inconsolata, Consolas, "Liberation Mono", Courier, monospace
$font-family-din-light = DINLight

$font-din-light
  font-family $font-family-din-light
  font-weight normal
  letter-spacing -.02em

// 688px = 40rem + 2 * (1.5rem) = $width-main + 2 * $space-large
$escape-wrap
  $breakpoint-escape-wrap = 688px
  $mq-escape-wrap-from = mq_from_and_print($breakpoint-escape-wrap)
  padding $space-large $space-large
  margin-left $space-large * -1
  margin-right $space-large * -1
  @media $mq-escape-wrap-from
    border-radius $space-small

$boxed
  @extend $escape-wrap
  border 1px solid darken($color-lightgray, 5)
  background-image linear-gradient(lighten($color-lightgray, 7), lighten($color-lightgray, 4))
  > :last-child
    margin-bottom 0

$backdrop
  background-color $color-blue-dark
  background-position 50% 90%
  background-repeat no-repeat
  background-image url(/images/backdrop.svg)
  background-blend-mode luminosity
  @media L_and_up
    background-size cover
