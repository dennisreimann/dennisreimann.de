*
  margin 0
  padding 0
  border 0
  outline 0
  vertical-align baseline

html
  line-height 1.5
  font-family $font-family-base
  @media print
    font-size 10pt
  @media up_to_S
    font-size 14px
  @media S_to_M
    font-size 15px
  @media M_and_up
    font-size 16px

body
  color $color-text
  background #FFF


section
  margin-bottom $space-huge

h1
  margin-bottom $space-tiny
  font-family $font-family-din-bold
  font-weight normal
  font-size $font-size-huge
  line-height 1.2

h2
h3
h4
h5
h6
  font-family $font-family-din-light
  font-weight normal
  color $color-subtle
  letter-spacing -.02em
  pre + &
    margin-top $space-huge

h2
  margin-bottom $space-small
  font-size $font-size-large
  line-height 1.25

h3
  margin-top 1em
  margin-bottom $space-tiny
  font-size $font-size-head
  line-height 1.4

h4
h5
h6
  margin-top 1em
  margin-bottom $space-tiny
  font-size $font-size-subhead
  line-height 1.4

p
  margin-bottom $space-normal

ul
ol
  margin-bottom $space-large
  li + li
    margin-top $space-tiny
  p + &
    margin-top $space-small * -1


pre
code
  white-space pre
  font-family $font-family-code
  font-size $font-size-code

pre
  overflow-x auto
  margin-bottom $space-large
  color #b9b5b8
  background darken($color-darkblue, 8)
  @extend $escape-wrap

code
  padding .2em .4em
  border-radius $space-tiny
  background $color-lightgray
  font-size $font-size-small
  pre &
  mark &
    padding 0
    background none

mark
  background $color-mark

ul
  margin-left $space-medium

ol
  margin-left $space-medium * 1.15

a
  text-decoration none
  &:hover
  &:active
    text-decoration underline
  main &
    color $color-highlight

figure
  margin-top $space-large
  margin-bottom $space-huge
  text-align center

  img
    display block
    margin 0 auto

  figcaption
    display inline-block
    margin-top $space-medium
    color #999
    text-align left
    font-size .9em
    font-style italic

p
ul
ol
.note
  +
    h2
      margin-top $space-large
  +
    h3
    h4
    h5
    h6
      margin-top $space-medium
