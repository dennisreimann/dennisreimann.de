*
  margin 0
  padding 0
  border 0
  outline 0
  vertical-align baseline

html
  line-height 1.65
  font-family $font-family-base
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  @media print
    font-size 12pt
  @media up_to_S
    font-size 15px
  @media S_to_M
    font-size 18px
  @media M_and_up
    font-size 20px

body
  color $color-text
  background $color-white

section
  margin-bottom $space-huge

h1
  @extend $font-din-light
  font-size $font-size-huge
  font-weight normal
  line-height 1.2
  letter-spacing -.015em
  margin-bottom $space-tiny

h2
h3
h4
h5
h6
  @extend $font-din-light
  color $color-subtle
  pre + &
    margin-top $space-huge

h2
  margin-bottom $space-small
  font-size $font-size-large
  line-height 1.25

h3
  margin-top $space-medium
  margin-bottom $space-tiny
  font-size $font-size-head
  line-height 1.4

h4
h5
h6
  margin-top 1em
  margin-bottom $space-tiny
  font-size $font-size-subhead
  line-height 1.4

p
  margin-bottom $space-large

ul
ol
  margin-bottom $space-large
  li + li
    margin-top $space-small

pre
code
  white-space pre
  font-family $font-family-code
  font-size $font-size-code

pre
  overflow-x auto
  margin-bottom $space-large
  color #b9b5b8
  background darken($color-blue-dark, 8)
  @extend $escape-wrap
  @media print
    padding-top 0
    padding-bottom 0

code
  border-radius $space-tiny
  background $color-lightgray
  pre &
  mark &
    padding 0
    background none

blockquote
  hyphens manual
  color $color-gray
  position relative
  padding-left 2em
  &::before
    content "â€ž"
    position absolute
    font-family Georgia
    top -.75em
    left .05em
    font-size 3em
    color $color-lightgray

code,
mark
  padding .2em .4em

mark
  background $color-mark

ul
  margin-left $space-medium

ol
  margin-left $space-medium * 1.15

main
  a
    color $color-highlight
    text-decoration underline
    &:hover
      text-decoration none

  h1, h2, h3, h4, h5, h6
    a
      color $color-highlight
      text-decoration none
      &:hover
        text-decoration underline

figure
  margin-top $space-large
  margin-bottom $space-huge
  text-align center

  img
    display block
    margin 0 auto

  figcaption
    display inline-block
    margin-top $space-medium
    color #999
    text-align left
    font-size .9em
    font-style italic

p
ul
ol
blockquote
.note
  +
    h2
      margin-top $space-huge
  +
    h3
    h4
    h5
    h6
      margin-top $space-xlarge
