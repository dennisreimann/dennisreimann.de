#about
  img
    padding $space-normal $space-normal $space-huge
    transform rotate(1.5deg)
    box-shadow 1px 1px 5px 0 $color-gray
    backface-visibility hidden

    @media up_to_M
      margin 0 0 $space-large 0
    @media M_and_up
      float right
      margin $space-tiny 0 $space-tiny $space-large

  table
    th
    td
      padding .2em 1em .2em 0
      vertical-align top
      text-align left
    th
      color $color-subtle
      font-weight normal

#imprint
  a
    color $color-subtle

#donate
  .form-note
    @media M_and_up
      display flex
      align-items center

  .note
    color $color-gray
    a
      color $color-gray

    @media M_and_up
      margin-left $space-huge
