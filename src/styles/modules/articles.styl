.articles
  list-style none
  margin-left 0

  &__item
    @media M_and_up
      display flex
      flex-wrap wrap
    + .articles__item
      @media up_to_M
        margin-top $space-large
      @media M_and_up
        margin-top $space-small

    &--topic
      + .articles__item--topic
        @media M_and_up
          margin-top $space-large

    &__date
      flex-basis 7em
      color $color-subtle
      @media up_to_M
        display block
      @media M_and_up
        margin-right $space-normal

    &__link
      flex 1

    &__title
      font-weight bold
      @media up_to_M
        display block
      @media M_and_up
        margin-right $space-small

    &__subtitle
      display block
      color $color-text
      text-decoration none
      @media up_to_M
        display block

    &__lang
      color $color-gray
      @media M_and_up
        margin-left $space-small

    &__alternate
      .articles__item__link
        color $color-gray

    &__description
      color $color-subtle
