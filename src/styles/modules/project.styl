.project
  margin-bottom $space-huge

  &__name
    margin $space-tiny 0
    font-size $font-size-head
    font-weight normal

  &__description
    margin-bottom $space-normal

  &__task
  &__period
  &__context
    margin-bottom $space-small
    color $color-subtle
    a
      color inherit

  @media screen
    &__task
    &__period
    &__context
      padding-left 1.75rem
      position relative

    &__icon
      width 1em
      height 1em
      position absolute
      top 2px
      left 2px
      fill $color-gray

    &__task
      ul
        list-style none
        margin 0

  @media print
    &__icon
      display none

    &__task
    &__period
    &__context
      &:before
        display inline-block
        margin-right $space-tiny
        color $color-subtle
    &__task:before
      content "Tasks:"
    &__context:before
      content "Client:"
    &__period:before
      content "Period:"
