mixin navItem(type, current)
  li(class=`nav__item nav__item--${type}${current ? ' nav__item--current' : ''}`)
    block

ul.nav
  +navItem("home", h.nav.isHome)
    a.nav__item__link(href="/" + h.t(locals, "", "home.html"))
      = h.t(locals, "Start", "Home")
  +navItem("articles", h.nav.isArticles)
    a.nav__item__link(href="/" + h.t(locals, "artikel", "articles") + ".html")
      = h.t(locals, "Artikel", "Articles")
  +navItem("elm", h.nav.isElm)
    a.nav__item__link(href="/" + h.t(locals, "artikel", "articles") + "/elm.html")
      = h.t(locals, "Elm", "Elm")
  +navItem("projects", h.nav.isProjects)
    a.nav__item__link(href="/projekte.html")
      = h.t(locals, "Projekte", "Projects")
  +navItem("contact", h.nav.isContact)
    a.nav__item__link(href="/" + h.t(locals, "kontakt", "contact") + ".html")
      = h.t(locals, "Kontakt", "Contact")
