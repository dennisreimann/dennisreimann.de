{
  "version": "1.0.0",
  "name": "website",
  "description": "dennisreimann.de",
  "repository": "git@github.com:dennisreimann/website.git",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=8.6.0"
  },
  "config": {
    "deployment": {
      "command": "rsync -ravzulO --chmod=u=rwX,g=rX --delete-after --exclude-from=.rsync-exclude",
      "target": "dreimann@dennisreimann.de:html"
    }
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "standard",
    "start": "npm run clean && gulp develop --dev",
    "prod": "npm run clean && gulp production",
    "devprod": "npm run clean && gulp production && serve dist",
    "deploy": "npm run prod && $npm_package_config_deployment_command dist/ $npm_package_config_deployment_target"
  },
  "devDependencies": {
    "autoprefixer": "^8.4.1",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.24.1",
    "css-mqpacker": "^6.0.2",
    "csswring": "^6.0.3",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.1",
    "gulp-concat": "^2.6.1",
    "gulp-concat-json": "^1.0.0",
    "gulp-data": "^1.3.1",
    "gulp-htmlmin": "^4.0.0",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^4.1.0",
    "gulp-load-plugins": "^1.5.0",
    "gulp-mvb": "^0.6.0",
    "gulp-plumber": "^1.2.0",
    "gulp-postcss": "^7.0.1",
    "gulp-pug": "^4.0.1",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.6.1",
    "gulp-rev-all": "^0.8.24",
    "gulp-rev-delete-original": "^0.2.3",
    "gulp-sitemap": "^5.1.0",
    "gulp-strip-debug": "^3.0.0",
    "gulp-stylus": "^2.7.0",
    "gulp-svg-sprite": "^1.4.0",
    "gulp-uglify": "^3.0.0",
    "highlight.js": "^9.12.0",
    "jstransformer-marked": "^1.0.3",
    "marked": "^0.3.19",
    "rimraf": "^2.6.2",
    "run-sequence": "^2.2.1",
    "standard": "^11.0.1",
    "yargs": "^11.0.0"
  },
  "standard": {
    "ignore": [
      "/dist"
    ]
  }
}
