{
  "version": "1.0.0",
  "name": "website",
  "description": "dennisreimann.de",
  "repository": "git@github.com:dennisreimann/website.git",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=8.6.0"
  },
  "config": {
    "deployment": {
      "command": "rsync -ravzulO --chmod=u=rwX,g=rX --delete-after --exclude-from=.rsync-exclude",
      "target": "dreimann@dennisreimann.de:html"
    }
  },
  "scripts": {
    "clean": "rimraf dist/*",
    "lint": "standard",
    "start": "npm run clean && gulp develop --dev",
    "prod": "npm run clean && gulp build && gulp optimize && gulp production",
    "devprod": "npm run clean && npm run prod -- --dev && serve -l 3000",
    "deploy": "$npm_package_config_deployment_command dist/ $npm_package_config_deployment_target"
  },
  "devDependencies": {
    "@babel/core": "7.7.2",
    "@babel/preset-env": "7.7.1",
    "@babel/register": "7.7.0",
    "autoprefixer": "9.7.1",
    "css-mqpacker": "7.0.0",
    "csswring": "7.0.0",
    "gulp": "4.0.2",
    "gulp-babel": "8.0.0",
    "gulp-concat": "2.6.1",
    "gulp-data": "1.3.1",
    "gulp-htmlmin": "5.0.1",
    "gulp-imagemin": "6.2.0",
    "gulp-mvb": "0.7.1",
    "gulp-postcss": "8.0.0",
    "gulp-pug": "4.0.1",
    "gulp-rename": "1.4.0",
    "gulp-replace": "1.0.0",
    "gulp-rev": "9.0.0",
    "gulp-rev-css-url": "0.1.0",
    "gulp-rev-delete-original": "0.2.3",
    "gulp-sitemap": "7.6.0",
    "gulp-strip-debug": "3.0.0",
    "gulp-stylus": "2.7.0",
    "gulp-svg-sprite": "1.5.0",
    "gulp-uglify": "3.0.2",
    "highlight.js": "9.16.2",
    "jstransformer-markdown-it": "2.1.0",
    "markdown-it": "10.0.0",
    "rimraf": "3.0.0",
    "serve": "11.2.0",
    "standard": "14.3.1",
    "yargs": "14.2.0"
  },
  "standard": {
    "ignore": [
      "/dist"
    ]
  }
}
